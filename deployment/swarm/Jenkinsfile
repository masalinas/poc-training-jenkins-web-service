pipeline {
    agent any

    environment {
        REGISTRY = "ofertoio"
        DOCKER_IMAGE = "web-service"
        SERVICE_NAME = "web-service"
        SWARM_MANAGER = "swarm-manager"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Generate Version') {
            steps {
                script {
                    // Version format: vYYYYMMDD-HHMMSS
                    VERSION = "v" + sh(script: "date +%Y%m%d-%H%M%S", returnStdout: true).trim()
                    echo "Generated version: ${VERSION}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${REGISTRY}/${DOCKER_IMAGE}:${VERSION} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {                    
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${REGISTRY}/${DOCKER_IMAGE}:${VERSION}
                    """
                }
            }
        }

        stage('Scan Container') {
            steps {
                script {
                    sh "docker run --rm aquasec/trivy image --exit-code 1 --severity HIGH,CRITICAL ${REGISTRY}/${DOCKER_IMAGE}:${VERSION}"
                }
            }
        } 

        stage('Deploy to Docker Swarm') {
            steps {
                script {
                    // Immutable Update (Simple Update)
                    sh """
                    if docker exec ${SWARM_MANAGER} sh -c 'docker service ls | grep ${SERVICE_NAME}'; then
                        echo "Service exists — updating to new version"
                        docker exec ${SWARM_MANAGER} docker service update \
                            --image ${REGISTRY}/${DOCKER_IMAGE}:${VERSION} \
                            --force \
                            ${SERVICE_NAME}
                    else
                        echo "Service does NOT exist — creating"
                        docker exec ${SWARM_MANAGER} docker service create \
                            --name ${SERVICE_NAME} \
                            --restart-condition any \
                            --publish 8090:80 \
                            ${REGISTRY}/${DOCKER_IMAGE}:${VERSION}
                    fi
                    """
                }
            }
        }

        /*stage('Deploy to Docker Swarm') {
            steps {
                script {
                    // Rolling Updates with zero downtime
                    sh """
                    if docker exec ${SWARM_MANAGER} sh -c 'docker service ls | grep ${SERVICE_NAME}'; then
                        echo "Service exists — updating to new version"
                        docker exec ${SWARM_MANAGER} docker service update \
                            --image ${REGISTRY}/${DOCKER_IMAGE}:${VERSION} \                        
                            --update-parallelism 1 \
                            --update-delay 10s \
                            --update-failure-action continue \
                            --update-monitor 20s \
                            --update-max-failure-ratio 0.1 \                        
                            ${SERVICE_NAME}
                    else
                        echo "Service does NOT exist — creating"
                        docker exec ${SWARM_MANAGER} docker service create \
                            --name ${SERVICE_NAME} \
                            --restart-condition any \                         
                            --publish 8090:80 \
                            ${REGISTRY}/${DOCKER_IMAGE}:${VERSION}
                    fi
                    """
                }
            }
        }*/        
    }

    post {
        always {
            echo "Pipeline finished"
        }
    }
}